{% endblock %}


{% block mainContent %}

    <div class="col-xs-12">

        <div class="row">
            <form id="form">
          <table border="0" align="center" class="table" width="80%">
               <tr class="table-header" align="center">
                   <td colspan="2">Examens</td>
               </tr>
              <tr align="center">
                  <td colspan="2">
                      <select id="matiereGroupe">
                           <option value="null">Sélectionner une matière et un groupe</option>
                          {% for matGroupe in listMatiereGroupe %}
                            <option value="{{ matGroupe.matiere.id }}|{{ matGroupe.groupe.id }}">{{ matGroupe.matiere.libelleMatiere }} - {{ matGroupe.groupe.nomgroupe }} {{ matGroupe.groupe.numgroupe }}</option>
                              {% endfor %}
                      </select>

                  </td>
              </tr>

              <tr align="center">
                  <td colspan="2">
                      <select id="salle">
                          <option value="null">Sélectionner une salle</option>
                          {% for salle in listSalle %}
                              <option value="{{ salle.id }}">{{ salle.numSalle }}</option>
                          {% endfor %}
                      </select>

                  </td>
              </tr>

              <tr align="center">
                  <td>
                     Date :
                  </td>
                  <td>
                      <input type="date" name="dateExamen">
                  </td>
              </tr>

              <tr align="center">
                  <td>
                      Temps :
                  </td>
                  <td>
                      <select ></select>
                  </td>
              </tr>


                  <tr align="center"><td colspan="2"><input type="button" value="Enregistrer" class="btn btn-primary" ></td></tr>


          </table>
            </form>


        </div>


    </div>


{% endblock %}